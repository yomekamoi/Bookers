<div>
	<h1>Books</h1>
		<table>
			<tr>
    			<th>Title</th>
    			<th>Body</th>
  			</tr>
			<% @books.each do |book| %>
  			<tr>
    			<td><%= book.title %></td>
    			<td><%= book.body %></td>
    			<td><%= link_to "Show", book_path(book.id) %></td>
    			<td><%= link_to "Edit", edit_book_path(book) %></td>
    			<td><%= link_to "Destroy", book_path(book), method: :delete %></td>
  			</tr>
			<% end %>
		</table>
</div>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<%= @book.errors.count %> errors prohibited this book from being saved:
        <ul>
        <% @book.errors.full_messages.each do |err| %>
          <li><%= err %></li>
        <% end %>
        </ul>
      <% end %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<br><%= f.submit 'Create Book' %></br>

<% end %>